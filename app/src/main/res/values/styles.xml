<resources>

    <!-- Base application theme. -->
    <style name="TentorTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/light_orange</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="TentorTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/light_grey</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlHighlight">@color/light_orange</item>
        <item name="android:textColorPrimary">@color/orange</item>
    </style>

    <style name="NavigationViewTheme" parent="NavigationBaseTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
</resources>
